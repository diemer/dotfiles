# Configs
bind 1:ctrl relaunch
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
#config windowHintsDuration 5
config windowHintsSpread true
#config windowHintsOrder persist

# Monitor Aliases
alias mon-dell    0
alias mon-cinema  1
alias mon-samsung 2
alias mon-laptop  3
alias mon-booth   4
alias mon-lenovo  5

# Misc Aliases
alias showHintsLeftHand hint ASDFQWERTGBZXCV
alias showNormalHint hint ASDFQWERTGBZXCVUIOPJKLHNM

# Abstract positions
alias full          move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY
alias rightmost     move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY
alias rightless     move screenOriginX+screenSizeX*0.6;screenOriginY  screenSizeX*0.4;screenSizeY
alias leftmost      move screenOriginX;screenOriginY                  screenSizeX*0.6;screenSizeY
alias leftless      move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY


# Concrete positions
alias 1-full        move screenOriginX;screenOriginY                  screenSizeX;screenSizeY             ${mon-dell}
alias 1-left        move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY           ${mon-dell}
alias 1-right       move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY           ${mon-dell}
alias 1-topleft     corner top-left                                   resize:screenSizeX/2;(screenSizeY/2)-1 ${mon-dell}
alias 1-bottomleft  corner bottom-left                                resize:screenSizeX/2;screenSizeY/2  ${mon-dell}
alias 1-browser     move screenOriginX+717;screenOriginY              1145;1200                           ${mon-dell}
alias 1-tweetbot    move screenOriginX+1245,screenOriginY             617;1200                            ${mon-dell}
#alias 1-topright    corner top-right                                  resize:screenSizeX/2;screenSizeY/2  ${mon-dell}
#alias 1-bottomright corner bottom-right                               resize:screenSizeX/2;screenSizeY/2  ${mon-dell}

alias 2-full        move screenOriginX;screenOriginY                  screenSizeX;screenSizeY             ${mon-cinema}
alias 2-left        move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY           ${mon-cinema}
alias 2-right       move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY           ${mon-cinema}

alias 3-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY                              ${mon-samsung}


# 1 Monitor layout


# 3 Monitor layout
layout 3monitors 'iTerm'                 ${2-full}
layout 3monitors 'Safari'                ${2-full}
layout 3monitors 'Google Chrome'         ${1-browser}
layout 3monitors 'Google Chrome Canary'  ${1-right}
layout 3monitors 'MacVim'                ${1-full}
layout 3monitors 'iTunes'                ${3-full}
layout 3monitors 'Pivotal Tracker'       ${3-full}
layout 3monitors 'HipChat'               ${1-bottomleft}
layout 3monitors 'Colloquy'              ${1-topleft}
layout 3monitors 'Sparrow'               ${2-full}
layout 3monitors 'Tweetbot'              ${1-tweetbot}


# Default Layouts
default 1monitor  resolutions:${mon-laptop}
default 3monitors resolutions:${mon-dell};${mon-cinema};${mon-samsung};
default 4monitors resolutions:${mon-laptop};${mon-dell};${mon-cinema};${mon-samsung};
default 5monitors resolutions:${mon-dell};${mon-cinema};${mon-samsung};${mon-booth};${mon-lenovo};

bind pad* layout 3monitors

bind e:cmd  ${showNormalHint}

# ======================================
# The HYPER key
# ======================================

alias hyper ctrl;shift;alt;cmd

bind return:${hyper} grid padding:5 ${mon-cinema}:6,2 ${mon-dell}:8,3

# Location bindings
bind h:${hyper} ${lefthalf}
bind j:${hyper} push bottom bar-resize:screenSizeY/2
bind k:${hyper} push top bar-resize:screenSizeY/2
bind l:${hyper} ${righthalf}
bind f:${hyper} ${full}

# Move between screens
bind right:cmd;alt throw prev
bind left:cmd;alt throw next
